<% layout("/layouts/boilerplate.ejs") %>

    <body>
        <div class="row mt-3">
            <div class="col-8 offset-3">
                <h3>
                    <%=data.title%>
                </h3>
            </div>
            <div class="card col-6 offset-3 show-card listing-card">
                <img src="<%=data.image.url%>" class="card-img-top show-img" alt="Listing_img">
                <div class="card-body">
                    <p class="card-text"><i>
                            Owned By : <%=data.owner.username %>
                        </i></p>
                    <p class="card-text">
                        <%=data.description%>
                    </p>
                    <p class="card-text"> &#8377;<%=data.price.toLocaleString("en-IN")%> <br></p>
                    <p class="card-text">
                        <%=data.location%>
                    </p>
                    <p class="card-text">
                        <%=data.country %>
                    </p>
                </div>
            </div>
        </div>

        <% if(currUser && currUser._id.equals(data.owner._id)){ %>
            <div class="btns">
                <a href="/listings/<%=data._id%>/edit" class="btn btn-dark col-1 offset-3 add-bnt">Edit</a>
                <form action="/listings/<%=data._id %>?_method=DELETE" method="post">
                    <button class="btn btn-dark  offset-5 ">Detete</button>
                </form>
            </div>
            <% } %>
                <div class="col-8 offset-3">
                    <hr>
                    <%if(currUser){%>
                        <h4>Leave a review</h4>
                        <form novalidate class="needs-validation" action="/listings/<%=data._id%>/reviews"
                            method="post">
                            <div class="mb-3">
                                <label class="form-label" for="rating">Rating</label>
                                <fieldset class="starability-slot">
                                    <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]"
                                        value="1" checked aria-label="No rating." />
                                    <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                                    <label for="first-rate1" title="Terrible">1 star</label>
                                    <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                                    <label for="first-rate2" title="Not good">2 stars</label>
                                    <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                                    <label for="first-rate3" title="Average">3 stars</label>
                                    <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                                    <label for="first-rate4" title="Very good">4 stars</label>
                                    <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                                    <label for="first-rate5" title="Amazing">5 stars</label>
                                </fieldset>
                            </div>

                            <div class="mb-3">
                                <label for="comment" class="form-label">Comments</label><br>
                                <textarea required class="form-control" name="review[comment]" id="comment" cols="40"
                                    rows="7"></textarea>
                                <div class="invalid-feedback">add some comments for review</div>
                            </div>
                            <br>
                            <button class="btn btn-outline-dark">Submit</button>

                        </form>
                        <hr>
                        <% } %>

                            <% if(data.reviews.length>0){ %>
                                <div class="row">
                                    <h4>All Reviews</h4>
                                    <% for (let i of data.reviews) { %>
                                        <div class="col-md-6 mb-3">
                                            <div class="card h-100">
                                                <div class="card-body">
                                                    <h5 class="card-title mt-3">@<%= i.author.username %>
                                                    </h5>
                                                    <p class="starability-result card-text"
                                                        data-rating="<%= i.rating %>">
                                                    </p>
                                                    <p class="card-text">
                                                        <%= i.comment %>
                                                    </p>
                                                </div>
                                                <form class="mb-3 mt-3" method="post"
                                                    action="/listings/<%= data._id %>/reviews/<%= i._id %>?_method=DELETE">
                                                    <button class="btn btn-outline-dark">Delete</button>
                                                </form>
                                            </div>
                                        </div>
                                        <% } %>
                                </div>
                                <% } %>

                </div>
                </div>

    </body>