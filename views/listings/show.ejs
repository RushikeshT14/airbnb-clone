<% layout("/layouts/boilerplate.ejs") %>

    <body>
        <div class="row mt-3">
            <div class="col-8 offset-3">
                <h3>
                    <%=data.title%>
                </h3>
            </div>
            <div class="card col-6 offset-3 show-card listing-card">
                <img src="<%=data.image.url%>" class="card-img-top show-img" alt="Listing_img">
                <div class="card-body">
                    <p class="card-text"><i>
                        Owned By : <%=data.owner.username %>
                        </i></p>
                    <p class="card-text">
                        <%=data.description%>
                    </p>
                    <p class="card-text"> &#8377;<%=data.price.toLocaleString("en-IN")%> <br></p>
                    <p class="card-text">
                        <%=data.location%>
                    </p>
                    <p class="card-text">
                        <%=data.country %>
                    </p>


                </div>
            </div>


        </div>
        <div class="btns">
            <a href="/listings/<%=data._id%>/edit" class="btn btn-dark col-1 offset-3 add-bnt">Edit</a>
            <form action="/listings/<%=data._id %>?_method=DELETE" method="post">
                <button class="btn btn-dark  offset-5 ">Detete</button>
            </form>
        </div>

        <div class="col-8 offset-3">
            <hr>
            <h4>Leave a review</h4>
            <form novalidate class="needs-validation" action="/listings/<%=data._id%>/reviews" method="post">
                <div class="mb-3">
                    <label class="form-label" for="rating">Rating</label>
                    <input type="range" min="1" max="5" id="rating" name="review[rating]" class="form-range">
                </div>
                <div class="mb-3">
                    <label for="comment" class="form-label">Comments</label><br>
                    <textarea required class="form-control" name="review[comment]" id="comment" cols="40"
                        rows="7"></textarea>
                    <div class="invalid-feedback">add some comments for review</div>
                </div>
                <br>
                <button class="btn btn-outline-dark">Submit</button>

            </form>
            <hr>
            <h4>All Reviews</h4>
            <div class="row">

                <% for( i of data.reviews ) {%>
                    <div class="card col-5 ms-3 mb-3">
                        <div class="card-body">
                            <h5 class="card-title mt-3">tejas</h5>
                            <p class="card-text">
                                <%=i.comment%>
                            </p>
                            <p class="card-text">
                                <%=i.rating%> Star
                            </p>
                        </div>
                        <form class="mb-3 mt-3" method="post"
                            action="/listings/<%=data._id%>/reviews/<%=i._id%>?_method=DELETE">
                            <button class="btn btn-outline-dark">Delete</button>
                        </form>
                    </div>

                    <% } %>
            </div>
        </div>
        </div>

    </body>